export PS1='[\u@\h:\w]\n$([ \j -gt 0 ] && echo "\j ")\\$ '
set -o vi

#free Ctrl-S and Ctrl-Q in terminal
[[ $- == *i* ]] && stty -ixon

if [ -e /etc/profile ] ; then
    source /etc/profile
fi

if [ -f ~/dotfiles/dircolors ] ; then
    eval "$(dircolors ~/dotfiles/dircolors)" > /dev/null
fi

if [ -f ~/dotfiles/bash/env_settings ] ; then
    source ~/dotfiles/bash/env_settings
fi

#cabal
if [ -d $HOME/.cabal/bin ] ; then
    export PATH="$HOME/.cabal/bin:$PATH"
fi

if [ -d $HOME/.local/bin ] ; then
    export PATH="$HOME/.local/bin:$PATH"
fi

#elixir
if [ -e ~/dotfiles/mix-completion.bash ] ; then
    source ~/dotfiles/mix-completion.bash
fi

#git
if [ -e ~/dotfiles/git-completion.bash ] ; then
    export GIT_PS1_SHOWDIRTYSTATE="yes"
    source ~/dotfiles/git-completion.bash
fi

if [ -e ~/dotfiles/bash/git ] ; then
    source ~/dotfiles/bash/git
    export PS1='[\u@\h:\w]\e[36m$(parse_git_branch)\e[0m\n$([ \j -gt 0 ] && echo "\j ")\\$ '
fi

#env
if [ -e ~/dotfiles/bash/export ] ; then
    source ~/dotfiles/bash/export
fi

#alias
if [ -e ~/dotfiles/bash/alias ] ; then
    source ~/dotfiles/bash/alias
fi

#perl
if [ -e /opt/perlbrew/etc/bashrc ] ; then
    export PERLBREW_HOME=/opt/perlbrew/.perlbrew
    source /opt/perlbrew/etc/bashrc
fi

#nike
if [ -f ~/dotfiles/nike ] ; then
    if [ -f ~/dotfiles/bash/nike ] ; then
        source ~/dotfiles/bash/nike
    fi
    if [ -f ~/dotfiles/bash/proxy ] ; then
        source ~/dotfiles/bash/proxy
    fi
fi

#tmux
if [ -f ~/dotfiles/tmux-completion.bash ] ; then
    source ~/dotfiles/tmux-completion.bash
fi
