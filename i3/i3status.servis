general {
    output_format = "i3bar"
    colors = true
    interval = 2
}

order += "disk /"
order += "wireless wlp2s0"
order += "wireless wwp0s20u5"
order += "battery 0"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "load"
order += "volume master"
order += "time"

wireless wlp2s0 {
    format_up = "%essid %ip â€£ %quality"
    format_down = ""
}

wireless wwp0s20u5 {
    format_up = "WWAN %ip"
    format_down = ""
}

time {
    format ="[%U] %d-%m-%Y %H:%M"
}

