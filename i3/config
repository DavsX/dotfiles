set $mod Mod4
set $primary_output LVDS1
set $secondary_output DP1

font pango:DejaVu Sans Mono 13px

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

bindsym $mod+Tab exec /home/davs/bin/jump_to_other_monitor.py
