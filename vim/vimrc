" Functions {{{
" SelectIndent {{{
function! SelectIndent ()
    let temp_var=indent(line("."))
    while indent(line(".")-1) >= temp_var
        execute "normal! k"
    endwhile
    execute "normal! V"
    while indent(line(".")+1) >= temp_var
        execute "normal! j"
    endwhile
endfunction
" }}}
" ChangeToCurrentLine {{{
function! ChangeToCurrentLine()
    let row = getline(".")
    echom row
    execute ":cd ".row
    execute ":e ".row
endfunction
" }}}
" SyntaxCheck {{{
function! SyntaxCheck()
    execute ":Rooter"
    let g:syntastic_perl_lib_path = [ './t/lib', './lib' ]
    execute ":SyntasticCheck"
endfunction
" }}}
" }}}
