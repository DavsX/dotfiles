[alias]
    st   = -c color.status=false status
    ci   = commit
    br   = branch
    co   = checkout
    me   = merge --no-ff
    ms   = merge --squash
    dt   = difftool
    dtc  = difftool --cached
    dtn  = difftool --name-only
    dts  = difftool --stat
    di   = diff
    din  = diff --name-only
    dic  = diff --cached
    dis  = diff --stat
    lc   = log -1 --format=%cd
    lo   = log --oneline --reverse
    lod  = log --pretty=format:"%h %ad %s" --date=short
    lg   = log --oneline --graph --all
    ld   = log --oneline --reverse HEAD ^develop --no-merges
    lm   = log --oneline --reverse HEAD ^master --no-merges
    re   = rebase -i
    rec  = rebase --continue
    mt   = mergetool
    root = !pwd
[user]
	name = Davs
	email = kovdavid@gmail.com
[core]
	editor = /usr/bin/vim
	pager = cat
	trustctime = false
[diff]
	external = git-meld
	tool = vimdiff
[merge]
    external = meld
	tool = fugitive
[color]
	ui = auto
[grep]
	lineNumber = true
[difftool]
	prompt = false
[mergetool]
	prompt = false
[mergetool "fugitive"]
	cmd = vim -f -c \"Gvdiff\" \"$MERGED\"
