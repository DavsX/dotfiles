[alias]
    st   = -c color.status=false status
    ci   = commit
    br   = branch
    co   = checkout
    me   = merge --no-ff
    ms   = merge --squash
    dt   = difftool
    dtc  = difftool --cached
    dtn  = difftool --name-only
    dts  = difftool --stat
    di   = diff
    din  = diff --name-only
    dic  = diff --cached
    dis  = diff --stat
    lc   = log -1 --format=%cd
    lo   = log --oneline --reverse -100
    lod  = log --pretty=format:"%h %ad %s" --date=short
    lg   = log --oneline --graph --all
    ld   = log --oneline --reverse HEAD ^develop --no-merges
    lm   = log --oneline --reverse HEAD ^master --no-merges
    re   = rebase -i
    rec  = rebase --continue
    mt   = mergetool
    root = !pwd
[user]
    name = Davs
    email = kovdavid@gmail.com
[core]
    editor = vim
    pager = cat
    trustctime = false
    excludesfile = ~/.git_global_ignore
    quotepath = false
[diff]
    tool = vimdiff
[merge]
    tool = fugitive
[color]
    ui = auto
[grep]
    lineNumber = true
[difftool]
    prompt = false
[mergetool]
    prompt = false
[mergetool "fugitive"]
    cmd = vim -f -c \"Gvdiff\" \"$MERGED\"
[push]
    default = current
[pull]
    default = current
[commit]
    template = ~/dotfiles/git_commit_template
[branch]
    autosetuprebase = always
